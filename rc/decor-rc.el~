(setq inhibit-splash-screen "_")
(show-paren-mode)
(set-frame-font "Mono 10")
(menu-bar-mode nil)
(tool-bar-mode nil)
(scroll-bar-mode nil)
(set-background-color "grey90")
(setq frame-background-mode 'light)
(ansi-color-for-comint-mode-on)
(blink-cursor-mode t)


(provide 'decor-rc)
